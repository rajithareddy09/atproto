# Bsky AppView Configuration for sfproject.net domains
# Service configuration
BSKY_PUBLIC_URL="https://bsky.sfproject.net"
BSKY_SERVER_DID="did:web:bsky.sfproject.net"
BSKY_PORT="2584"

# External service URLs
BSKY_DID_PLC_URL="https://plc.sfproject.net"
BSKY_DATAPLANE_URL="http://localhost:2585"  # Adjust based on your dataplane setup

# Service signing key (generate a secure did:key)
BSKY_SERVICE_SIGNING_KEY="did:key:your-service-signing-key"

# Admin passwords (comma-separated)
BSKY_ADMIN_PASSWORDS="admin-password-1,admin-password-2"

# Optional: CDN configuration
BSKY_CDN_URL="https://cdn.sfproject.net"
BSKY_IMG_URI_ENDPOINT="https://cdn.sfproject.net/img"

# Optional: Search service
BSKY_SEARCH_URL="https://search.sfproject.net"

# Optional: Suggestions service
BSKY_SUGGESTIONS_URL="https://suggestions.sfproject.net"

# Optional: Topics service
BSKY_TOPICS_URL="https://topics.sfproject.net"

# Environment
NODE_ENV="production"
BSKY_VERSION="1.0.0"

# Optional: Handle resolution nameservers
BSKY_HANDLE_RESOLVE_NAMESERVERS="8.8.8.8,8.8.4.4"
