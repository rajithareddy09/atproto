# PDS Configuration for sfproject.net domains
# Hostname - the public domain that you intend to deploy your service at
PDS_HOSTNAME="pdsapi.sfproject.net"
PDS_PORT="2583"

# Service DID - should match your hostname
PDS_SERVICE_DID="did:web:pdsapi.sfproject.net"

# Database config
PDS_DATA_DIRECTORY="data"

# Blobstore - filesystem location to store uploaded blobs
PDS_BLOBSTORE_DISK_LOCATION="blobs"

# Private keys - these are each expected to be 64 char hex strings (256 bit)
# Generate these securely using a key generation tool
PDS_REPO_SIGNING_KEY_K256_PRIVATE_KEY_HEX="3ee68..."
PDS_PLC_ROTATION_KEY_K256_PRIVATE_KEY_HEX="e049f..."

# Secrets - update to secure high-entropy strings
PDS_DPOP_SECRET="32-random-bytes-hex-encoded"
PDS_JWT_SECRET="jwt-secret"
PDS_ADMIN_PASSWORD="admin-pass"

# Environment - configured for your sfproject.net network
PDS_DID_PLC_URL="https://plc.sfproject.net"
PDS_BSKY_APP_VIEW_URL="https://bsky.sfproject.net"
PDS_BSKY_APP_VIEW_DID="did:web:bsky.sfproject.net"
PDS_CRAWLERS="https://bsky.sfproject.net"

# OAuth Provider branding for your PDS
PDS_OAUTH_PROVIDER_NAME="SF Project PDS"
PDS_OAUTH_PROVIDER_LOGO="https://pdsapi.sfproject.net/logo.png"
PDS_OAUTH_PROVIDER_PRIMARY_COLOR="#7507e3"
PDS_OAUTH_PROVIDER_ERROR_COLOR="#ff4444"
PDS_OAUTH_PROVIDER_HOME_LINK="https://pdsapi.sfproject.net"
PDS_OAUTH_PROVIDER_TOS_LINK="https://pdsapi.sfproject.net/terms"
PDS_OAUTH_PROVIDER_POLICY_LINK="https://pdsapi.sfproject.net/privacy"
PDS_OAUTH_PROVIDER_SUPPORT_LINK="https://pdsapi.sfproject.net/support"

# Service branding URLs
PDS_HOME_URL="https://pdsapi.sfproject.net"
PDS_LOGO_URL="https://pdsapi.sfproject.net/logo.png"
PDS_PRIVACY_POLICY_URL="https://pdsapi.sfproject.net/privacy"
PDS_TERMS_OF_SERVICE_URL="https://pdsapi.sfproject.net/terms"
PDS_SUPPORT_URL="https://pdsapi.sfproject.net/support"
PDS_CONTACT_EMAIL_ADDRESS="admin@sfproject.net"

# Handle domains - users can register handles ending with .sfproject.net
PDS_SERVICE_HANDLE_DOMAINS=".sfproject.net"

# Debugging
NODE_TLS_REJECT_UNAUTHORIZED=1
LOG_ENABLED=0
LOG_LEVEL=info
PDS_INVITE_REQUIRED=1
PDS_DISABLE_SSRF_PROTECTION=0
