# Ozone Configuration for sfproject.net domains
# Service configuration
OZONE_PUBLIC_URL="https://ozone.sfproject.net"
OZONE_SERVER_DID="did:web:ozone.sfproject.net"
OZONE_PORT="3000"

# Database configuration
OZONE_DB_POSTGRES_URL="postgresql://username:password@localhost:5432/ozone"
OZONE_DB_POSTGRES_SCHEMA="ozone"

# External service URLs
OZONE_APPVIEW_URL="https://bsky.sfproject.net"
OZONE_APPVIEW_DID="did:web:bsky.sfproject.net"
OZONE_PDS_URL="https://pdsapi.sfproject.net"
OZONE_PDS_DID="did:web:pdsapi.sfproject.net"
OZONE_DID_PLC_URL="https://plc.sfproject.net"

# Admin configuration
OZONE_ADMIN_DIDS="did:web:your-admin-did"
OZONE_MODERATOR_DIDS="did:web:your-moderator-did"
OZONE_TRIAGE_DIDS="did:web:your-triage-did"
OZONE_ADMIN_PASSWORD="your-admin-password"

# Signing key (generate a secure 64-char hex string)
OZONE_SIGNING_KEY_HEX="your-64-char-hex-signing-key"

# Optional: Chat service (if you have one)
# OZONE_CHAT_URL="https://chat.sfproject.net"
# OZONE_CHAT_DID="did:web:chat.sfproject.net"

# Optional: Blob divert service
# OZONE_BLOB_DIVERT_URL="https://blob.sfproject.net"
# OZONE_BLOB_DIVERT_ADMIN_PASSWORD="blob-admin-password"

# Optional: Verifier service
# OZONE_VERIFIER_URL="https://verifier.sfproject.net"
# OZONE_VERIFIER_DID="did:web:verifier.sfproject.net"
# OZONE_VERIFIER_PASSWORD="verifier-password"

# Environment
NODE_ENV="production"
OZONE_DEV_MODE=false
